@model Uco.Models.ChangePasswordModel
@{
    Layout = "~/Themes/SlkOrigin/Views/Shared/_LayoutShop.cshtml";
    ViewBag.Url = "~/Profile/Orders/";
}

<div data-role="view" id="tabstrip-changePassword" data-title="@RP.T("Views.Profile.Password.Mobile.ChangePasswordViewTitleText")" data-layout="mobile-layout" class="k-rtl">
    <div id="list" data-style="inset" style="padding:10px;">
        <h2 class="">@RP.T("Views.Profile.Menu.Password")</h2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form3", style = "" }))
        {
            <p>
                @RP.T("Views.Profile.Password.MinimumPasswordLength") @Membership.MinRequiredPasswordLength
            </p>
            if (TempData["SuccessMessage"] != null)
            {
                <div class="success">
                    <p> @TempData["SuccessMessage"] </p>
                </div>
            }



            @Html.ValidationSummary(true, @RP.T("Views.Profile.Password.Errors").ToString())

            <div class="row">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "text-box single-line valid" })
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>

            <div class="row">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "text-box single-line valid" })
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="row">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box single-line valid" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="@RP.T("Views.Profile.Password.ChangePasswordSend")" class="k-button" />
            </p>
        }
    </div>
</div>

@if (Session["ShopID"] != null)
{
    @Html.Partial("_StaticViews.Mobile", (int)Session["ShopID"])
}
<input type="hidden" name="passwordViewsInit" />