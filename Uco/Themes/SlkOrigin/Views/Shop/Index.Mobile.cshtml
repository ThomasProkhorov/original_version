@model Uco.Models.Shop
@{
    Layout = "~/Themes/SlkOrigin/Views/Shared/_LayoutShop.cshtml";
    ViewBag.Url = "~/Shop/Index/" + Model.ID;
    ViewBag.ShopID = Model.ID;
    if (!string.IsNullOrEmpty(Model.Logo))
    {
        ViewBag.Logo = Model.Logo;
    }
}
