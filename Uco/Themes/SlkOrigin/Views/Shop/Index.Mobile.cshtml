<input type="hidden" id="itemInCartText" value="@RP.T("Views.Shop._ProductGalleryItem.ItemInCartText")"/>
<input type="hidden" id="itemInCartText2" value="@RP.T("Views.Shop._ProductGalleryItem.ItemInCartText2")" />

