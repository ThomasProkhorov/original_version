                                 @if (Model.Cart.Shop == null || Model.Cart.Shop.PaymentMethodIDs == null
                                    || Model.Cart.Shop.PaymentMethodIDs.Contains("," + ((int)PaymentMethod.ClubCard) + ","))
                                {
                                     
