@model dynamic
@using Uco.Infrastructure
@{
   
System.Type t = Model.GetType();

var ModelName = t.Name;
var gridName = t.Name+"grid";
}


<script>
    var shopcommentApi = {
        Approv: function (id) {
           var grid = $("#@(gridName)").data('kendoGrid');
            var data = grid.dataSource.get(id);
            data.set('Approved', true);
            grid.saveRow();
            grid.saveChanges();
        }
    };

</script>