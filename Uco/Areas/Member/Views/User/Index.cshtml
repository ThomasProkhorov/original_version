@{
    ViewBag.Title = RP.T("Admin.Views.User.Index.Title");
    Layout = "~/Areas/Admin/Views/Shared/_LayoutNoTree.cshtml";
}

<h2>@RP.T("Admin.Views.User.Index.Title")</h2>

@(Html.Kendo().Grid<Uco.Models.User>()
        .Name("Grid")
        .DataSource(dataSource => dataSource.Ajax()
            .Model(model => { model.Id(item => item.ID); })
                    .Read(r => r.Action("_AjaxRead", "Generic", new { model = "User" }))
        // .Destroy(r => r.Action("_AjaxDelete", "Generic", new { model = "User" }))
        )
        .Columns(columns =>
        {
            columns.Bound(r => r.CreationDate).Width(200).Format("{0:MM/dd/yyyy}");
            // columns.Bound(r => r.UserName);
            columns.Bound(r => r.Email);
            columns.Bound(r => r.Phone);
            columns.Bound(r => r.FirstName);
            columns.Bound(r => r.LastName);
            columns.Bound(r => r.AddressMap);
            columns.Bound(r => r.CompanyName);
        })
        .Pageable()
        .Sortable()
        .Filterable()
)
<br />
